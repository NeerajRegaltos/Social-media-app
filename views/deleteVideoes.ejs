<%- include("./layouts/mainHeader.ejs") %>

    <div class="d-flex bd-highlight sticky-top">
        <div class=" bd-highlight text-center mt-1">
            <a href="javascript:history.back()" class="btn-sm btn-primary" style="text-decoration: none;">Go Back</a>
        </div>
        <div class=" bd-highlight text-center mt-1">
            <a href="/profile/<%= locals.id  %>" class="btn btn-success mt-5">Go back to profile</a>
        </div>
        <div class=" bd-highlight text-center mt-1">
            <a href="/settings" class="btn btn-warning mt-5">Go back to settings</a>
        </div>
    </div>
    <div class="container">

        <h3 class="mt-3 mb-3">Delete Your Vidoes</h3>
        <div style="display: flex; flex-direction: column;">
            <% locals.posts.forEach(post=> { %>
                <% if (post.photo===undefined) { %>
                    <video draggable="false" width="500" height="400" controls autoplay loop
                        style="max-width: 100%; height: 600px;" muted class="mb-5">
                        <source src="<%= post.video %>">
                    </video>
                    <div class="row mb-5">
                        <div class="col-6">
                            <h4>Likes: <%= post.like.length %>
                            </h4>
                        </div>
                        <div class="col-6">
                            <form action="/deleteVideoes" method="post">
                                <input type="hidden" name="fileName" value="<%= post.fileName  %>">
                                <input type="submit" value="Delete" class="btn btn-danger">
                            </form>
                        </div>
                    </div>
                    <% } %>

                        <% }) %>
        </div>
    </div>


    <%- include("./layouts/mainFooter.ejs") %>