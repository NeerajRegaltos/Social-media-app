<%- include("./layouts/proheader.ejs") %>


    <div class="d-flex bd-highlight">
        <div class="flex-fill bd-highlight ms-2 mt-1">
            <a href="/">
                <h3 class="btn btn-primary">Home</h3>
            </a>
        </div>
        <div class="flex-fill bd-highlight mt-1">
            <a href="/createpost" class="btn btn-danger"><i class="fas fa-plus-square"></i></a>
        </div>
        <div class="bd-highlight mt-1 me-1">
            <a href="/settings" class="btn btn-primary"><i class="fas fa-user-cog setting"></i></a>
        </div>
    </div>
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" style="height: 300px;">
                <div class="h-75">
                    <img src="<%= locals.backgroundPic  %>" draggable="false" class="d-block w-100" alt="dove"
                        class="image1 backphoto">
                </div>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="col ml-5 image">
            <img src="<%= locals.profilePic %>" draggable="false" alt="<%= locals.profileName %>"
                class="profilepic image2">
        </div>
        <hr class="hr">
        <div class="mt-3 profileName">
            <h2>
                <%= locals.profileName %>
            </h2>
            <hr>
            <div class="bio">
                <h5>
                    <%= locals.bio %>
                </h5>
            </div>

        </div>

    </div>

    <div class="row align-items-center">
        <div class="col-4">
            <form action="/follow" method="POST">
                <input type="hidden" name="follow" value="<%= locals.profileName  %>">
                <input type="submit" value="Follow" class="btn btn-success follow"
                    style="display: <%= locals.display %>;">

            </form>
            <form action="/unfollow" method="POST">
                <input type="hidden" name="follow" value="<%= locals.profileName  %>">
                <input type="submit" value="Unfollow" class="btn btn-success follow"
                    style="display: <%= locals.unfollow %>;">
            </form>
        </div>
        <div class="col-4">
            <div class="row">
                <div class="col">
                    <h6 class="followers" style="margin-left: 35px;">
                        <%= locals.followers.length %>
                    </h6>
                </div>
            </div>
            <h6 class="followers" style="color: rgb(233, 52, 203);">Followers</h6>


        </div>
        <div class="col-4">
            <div class="row">
                <div class="col">
                    <h6 style="margin-left: 35px;" class="following">
                        <%= locals.following.length %>
                    </h6>
                </div>
            </div>
            <h6 class="following" style="color: rgb(75, 159, 233);">Following</h6>
        </div>
    </div>

    <hr>
    <div class="flex">


        <% locals.posts.reverse().forEach(post=> { %>
            <!-- <% if (post.photo!==undefined) { %> -->
            <div class="container post">

                <form action="/deletepost" method="POST">
                    <!-- <% console.log("inside",post._id) %>  -->
                    <input type="hidden" name="postId" value="<%= post._id  %>">
                    <input type="hidden" name="fileName" value="<%= post.fileName  %>">
                    <div class="text-center">

                        <button type="submit" style="background-color: white; border: none; outline: none;"><i
                                class="fas fa-trash-alt" style="color: red; font-size: 20px;"></i></button>
                    </div>

                </form>


                <div id="carouselExampleSlidesOnly" class="carousel slide justify-content-center"
                    data-bs-ride="carousel">
                    <div class="carousel-item active">
                        <img src="<%= post.photo  %> " draggable="false" class="d-block w-100" alt="post">
                    </div>
                </div>
                <p class="mt-3">#<span>
                        <%=post.caption %>
                    </span></p>
            </div>
            <div class="d-flex bd-highlight">
                <div class="flex-fill bd-highlight icon">
                    <% if (post.like.includes(locals.id)) { %>
                        <form action="/unlike" method="POST">
                            <div>
                                <input type="hidden" name="like" value="<%= post._id  %>">
                                <input type="hidden" name="where" value="">

                                <button type="submit"
                                    style="border: none; background-color: white; outline: none;"><a><i
                                            style="color: red;" class="fas fa-heart"></i></a></button>
                                <span>
                                    <%= post.like.length %>
                                </span>
                            </div>
                        </form>
                        <% }else{ %>
                            <form action="/like" method="POST">
                                <div>
                                    <input type="hidden" name="like" value="<%= post._id  %>">
                                    <input type="hidden" name="where" value="home">

                                    <button type="submit"
                                        style="border: none; background-color: white; outline: none;"><a><i
                                                class="fas fa-heart"></i></a></button>
                                    <span>
                                        <%= post.like.length %>
                                    </span>
                                </div>
                            </form>
                            <% } %>


                </div>
                <div class="flex-fill bd-highlight icon">
                    <i class="fas fa-comments"></i><span>2</span>
                </div>
                <div class="flex-fill bd-highlight icon">
                    <a href="<%= post.photo  %>" download="profilePost" target="_blank"><i
                            class="fas fa-download"></i></a>
                </div>
            </div>
    </div>
    <hr>
    <!-- <% } %> -->



    <% }) %>







        <%- include("./layouts/profooter.ejs") %>